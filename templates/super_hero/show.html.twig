{% extends 'base.html.twig' %}

{% block title %}SuperHero{% endblock %}

{% block body %}
    <h1>SuperHero</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ super_hero.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ super_hero.name }}</td>
            </tr>
            <tr>
                <th>AlterEgo</th>
                <td>{{ super_hero.alterEgo }}</td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ super_hero.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>EnergyLevel</th>
                <td>{{ super_hero.energyLevel }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ super_hero.biography }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ super_hero.imageName }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ super_hero.createdAt ? super_hero.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_super_hero_index') }}">back to list</a>

    <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}">edit</a>

    {{ include('super_hero/_delete_form.html.twig') }}
{% endblock %}
