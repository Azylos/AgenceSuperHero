{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @keyframes hologramFlicker {
            0% { opacity: 0.8; text-shadow: 0 0 10px #00ffff; }
            5% { opacity: 0.9; }
            10% { opacity: 0.8; }
            15% { opacity: 1; }
            25% { opacity: 0.8; }
            30% { opacity: 0.9; }
            35% { opacity: 0.8; }
            40% { opacity: 1; text-shadow: 0 0 15px #00ffff; }
            50% { opacity: 0.8; }
            51% { opacity: 0.4; }
            52% { opacity: 0.8; }
            85% { opacity: 0.9; }
            100% { opacity: 0.8; text-shadow: 0 0 10px #00ffff; }
        }

        @keyframes scanline {
            0% {
                transform: translateY(-100%);
            }
            100% {
                transform: translateY(100%);
            }
        }

        @keyframes glitch {
            0% {
                clip-path: inset(40% 0 61% 0);
                transform: translate(-20px, -10px);
            }
            20% {
                clip-path: inset(92% 0 1% 0);
                transform: translate(20px, 10px);
            }
            40% {
                clip-path: inset(43% 0 1% 0);
                transform: translate(-20px, 10px);
            }
            60% {
                clip-path: inset(25% 0 58% 0);
                transform: translate(20px, -10px);
            }
            80% {
                clip-path: inset(54% 0 7% 0);
                transform: translate(-20px, 10px);
            }
            100% {
                clip-path: inset(58% 0 43% 0);
                transform: translate(20px, -10px);
            }
        }

        .cyber-container {
            position: relative;
            background: rgba(0, 255, 255, 0.05);
            border: 1px solid rgba(0, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 8px;
            overflow: hidden;
        }

        .cyber-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent, #00ffff, transparent);
            animation: scanline 2s linear infinite;
        }

        .hologram-text {
            animation: hologramFlicker 4s infinite;
            color: #00ffff;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .hologram-title {
            position: relative;
            color: #00ffff;
            text-shadow: 0 0 10px #00ffff;
            animation: hologramFlicker 4s infinite;
        }

        .hologram-title::before,
        .hologram-title::after {
            content: attr(data-text);
            position: absolute;
            left: 0;
            text-shadow: 0 0 10px #ff0080;
            opacity: 0.8;
        }

        .hologram-title::before {
            animation: glitch 4s infinite;
            color: #ff0080;
            z-index: -2;
        }

        .hologram-title::after {
            animation: glitch 4s infinite reverse;
            color: #00ffff;
            z-index: -1;
        }

        .bg-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                linear-gradient(45deg, rgba(0,0,0,0.7), rgba(0,20,40,0.7)),
                repeating-linear-gradient(
                    transparent,
                    transparent 2px,
                    rgba(0, 255, 255, 0.1) 3px,
                    rgba(0, 255, 255, 0.1) 3px
                );
            pointer-events: none;
        }
    </style>
{% endblock %}

{% block title %}Cyber Interface{% endblock %}

{% block body %}
    <section class="min-h-screen relative overflow-hidden">
        <!-- Image de fond -->
        <div class="fixed inset-0 z-0">
            <img src="{{ asset('ressources/images/lobby.png') }}" 
                 alt="Lobby Background" 
                 class="w-full h-full object-cover"
                 style="filter: saturate(1.2) contrast(1.1);">
        </div>

        <!-- Overlay avec effet de scan -->
        <div class="bg-overlay"></div>

        <!-- Conteneur principal -->
        <div class="relative z-10 flex items-center justify-center min-h-screen p-4">
            <div class="cyber-container p-8 w-full max-w-4xl">
                <!-- Titre avec effet glitch -->
                <h1 class="hologram-title text-5xl font-bold mb-8 text-center" 
                    data-text="Bienvenue au Lobby Cyberpunk">
                    Bienvenue au Lobby Cyberpunk
                </h1>

                <!-- Contenu principal -->
                <div class="space-y-6">
                    <p class="hologram-text text-lg leading-relaxed">
                        Portail d'accès aux systèmes principaux. Sélectionnez votre destination.
                    </p>

                    <!-- Grille de navigation -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
                        <a href="#" class="cyber-container p-4 hover:bg-cyan-900/20 transition-all duration-300">
                            <h2 class="hologram-text text-xl mb-2">Tableau de Mission</h2>
                            <p class="text-cyan-200/80">Accédez aux missions disponibles et aux objectifs actuels</p>
                        </a>

                        <a href="#" class="cyber-container p-4 hover:bg-cyan-900/20 transition-all duration-300">
                            <h2 class="hologram-text text-xl mb-2">Équipes</h2>
                            <p class="text-cyan-200/80">Consultez les équipes disponibles et leurs statuts</p>
                        </a>

                        <a href="#" class="cyber-container p-4 hover:bg-cyan-900/20 transition-all duration-300">
                            <h2 class="hologram-text text-xl mb-2">Arsenal</h2>
                            <p class="text-cyan-200/80">Gérez votre équipement et vos ressources</p>
                        </a>

                        <a href="#" class="cyber-container p-4 hover:bg-cyan-900/20 transition-all duration-300">
                            <h2 class="hologram-text text-xl mb-2">Communications</h2>
                            <p class="text-cyan-200/80">Centre de communication et messages</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}